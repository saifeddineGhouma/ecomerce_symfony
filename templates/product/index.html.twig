{% extends 'base.html.twig' %}

{% block title %}Nos Products {% endblock %}

{% block contenu %}
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>Filter</h1>
      {{ form(form)}}
    </div>
    <div class="col-md-9">

      <h1>Nos products</h1>
        <div class="row product-container">
            {% for product in products %}

            <div class="col-md-4">
                <div class="product_item">
                  <a href="{{path('product.show',{'slug':product.slug})}}"><img src="uploads/{{product.illustration}}"  width="200" height="200" alt="" class="img-fluid" ></a> 
                <h5>{{product.name}}</h5>
                <span class="product-subtitle">{{product.subtitle}}</span>
                
                <span class="product-price">{{(product.price/100) | number_format(2) }} TND</span>

                </div>
            </div>
            {% endfor %}

        </div>


    </div>
  </div>
</div>


{% endblock %}
